%h1= "Posts tagged #{tag}"
- posts.each do |post|
	.post
		%p.date
			= post[:created_at].strftime("%b")
			%b= post[:created_at].strftime("%d")
		%h2.title
			%a{:href => post.url}= post[:title]
		%p.meta
			%small
				= post.linked_tags + " | "
				%a(href = "#{post.url}#disqus_thread") comments
		.entry
			= post.summary_html
			- if post.more? 
				%a{:href => post.url} Continue reading
