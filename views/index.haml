!!! 1.1
%html
	%head
		%meta(http-equiv = 'content-type' content = 'text/html; charset=utf-8')
		%title= "ZFS"
		%link{:rel => 'stylesheet', :href => 'css/main.css', :type => 'text/css'}  
		%link{:href => '/feed', :rel => 'alternate', :title => 'Primary Feed', :type => 'application/atom+xml'}
	%body
		#header
			#logo
				%h1
					%a{:href => '/'}= "ZFS"
				%p= "by RW Boyer"
		#content
			- zfs.each do |zf|
				.post
					%p.date
						=zf[:used]
						%b=zf[:avail]
					%h2.title
						%a{:href => zf[:name]}= zf[:name]
					%p.meta
						%small
							= zf[:mount]
					.entry
						= "Some gobbledy gook"
			- if zfs.empty?
				%h2
					%p= "No ZFS filesystems available"
					%p
						%a{:href => '/auth'} Log in

		#footer
			%p#legal
				="Content by RW Boyer | Design adapted from "
				%a{:href => 'http://www.freecsstemplates.org/preview/replenish'} Replenish
